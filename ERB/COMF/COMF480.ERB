GOTO JANKEN_TOP
$JANKEN_ROUTINE_END

PRINTFORML あなた %NUMTOViVoDa(JANKEN:0,1)%
PRINTFORML 相手 %NUMTOViVoDa(JANKEN:1,1)%

JANKENABLE_1P:(JANKEN:0)-=1
JANKENABLE_2P:(JANKEN:1)-=1
ターン=ターン+1
;勝敗チェック
SELECTCASE (3+JANKEN:0-JANKEN:1)%3
	CASE 0
		;引き分け
		PRINTL 引き分け
		TMP=正規分布(100*NUMTOABLViVoDa(P1, JANKEN:0))-正規分布(100*NUMTOABLViVoDa(P2, JANKEN:1))
		CALL PRINT_JANKEN_DRAW( TMP>0 ? P1 # P2 )
