;ARG:1はアイドルランク関連
#FUNCTION
SIF !所属(ARG)
	RETURNF 0
SIF !TALENT:ARG:アイドル
	RETURNF 0
SIF CFLAG:ARG:現在位置 != CFLAG:MASTER:現在位置
	RETURNF 0
SIF BASE:ARG:体力*4 < MAXBASE:ARG:体力*3 || BASE:ARG:気力*4 < MAXBASE:ARG:気力*3
	RETURNF 0
SIF ARG:1 > CFLAG:ARG:アイドルランク+1
	RETURNF 0
RETURNF 1

