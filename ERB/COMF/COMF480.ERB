		POINT:(TMP>0 ? 0 # 1)+=ABS(TMP)
	CASE 1
		;負け
		PRINTL 負け
		RENSHO:0=0
		RENSHO:1+=1
		CALL PRINT_JANKEN_WIN(P2, JANKEN:1)
		TMP=正規分布(100*NUMTOABLViVoDa(P2, JANKEN:1))
		POINT:1+=TMP
	CASE 2
		;勝ち
		PRINTL 勝ち
		RENSHO:0+=1
		RENSHO:1=0
		CALL PRINT_JANKEN_WIN(P1, JANKEN:0)
		TMP=正規分布(100*NUMTOABLViVoDa(P1, JANKEN:0))
		IF CFLAG:P1:審査員枕
			PRINTL 
			PRINTFORM どうやら審査員は%CALLNAME:P1%をひいきして評価(×１．２)しているようだ
			TMP=TMP*120/100
			CFLAG:P1:審査員枕=0
		ENDIF
		POINT:0+=TMP
ENDSELECT
PRINTFORMW (+{ABS(TMP)})
;終了処理 
VARSET JANKEN,-1
DRAWLINE
GOTO JANKEN_TOP

