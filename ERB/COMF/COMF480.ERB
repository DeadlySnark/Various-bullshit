@NUMTOViVoDa(ARG, KEY=0)
#FUNCTIONS
#DIM KEY
IF KEY==0
	SELECTCASE ARG
		CASE 0
			RETURNF "Vi"
		CASE 1
			RETURNF "Vo"
		CASE 2
			RETURNF "Da"
	ENDSELECT
ELSE
	SELECTCASE ARG
		CASE 0
			RETURNF "ビジュアル"
		CASE 1
			RETURNF "ボーカル"
		CASE 2
			RETURNF "ダンス"
	ENDSELECT
ENDIF
RETURNF "エラー"
@NUMTOABLViVoDa(ARG, ARG:1)
#FUNCTION
;0,1,2をViVoDaに対応させリターン
SELECTCASE ARG:1
	CASE 0
		RETURNF ABL:ARG:ビジュアル技能
	CASE 1
		RETURNF ABL:ARG:ボーカル技能
	CASE 2
		RETURNF ABL:ARG:ダンス技能
ENDSELECT