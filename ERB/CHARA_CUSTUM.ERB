@CHARA_CUSTUM

	PRINTL キャラの設定を変えることができます
	FOR LOCAL, 0, CHARA_ACTIVE
		PRINTFORML [{LOCAL}] - %CALLNAME:LOCAL%
	NEXT
	PRINTL [99] 設定完了
	INPUT

	IF RESULT >= 0 && RESULT < CHARA_ACTIVE
		CALL CUSTOM_TERMINAL(RESULT)
	ELSEIF RESULT == 99
		PRINTL よろしいですか？
		PRINTL [0] はい
		PRINTBUTTON "[ELSE] いいえ", 1
		PRINTL
		ONEINPUT
		IF RESULT == 0
			CALL CLOTHES_CUSTOM
			RETURN
		ENDIF
	ENDIF
	RESTART
RETURN 0
	
